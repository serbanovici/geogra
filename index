// Funcția pentru afișarea întrebării curente
function loadQuestion() {
  const quiz = document.getElementById("quiz");
  if (currentQuestion >= quizData.length) {
    quiz.innerHTML = `<h2>Ai terminat quiz-ul! Scorul tău: ${score} / ${quizData.length}</h2>`;
    return;
  }

  const q = quizData[currentQuestion];
  let html = `<div class="question"><strong>Întrebarea ${currentQuestion + 1}:</strong> ${q.question}</div>`;
  if (q.image) html += `<img src="${q.image}" alt="Imagine întrebarea">`;
  html += `<ul class="options">`;
  q.options.forEach((opt, idx) => {
    html += `<li><input type="radio" name="option" id="opt${idx}" value="${idx}"> <label for="opt${idx}">${opt}</label></li>`;
  });
  html += `</ul><button onclick="submitAnswer()">Următoarea</button>`;
  quiz.innerHTML = html;
}

// Funcția pentru verificarea răspunsului și trecerea la următoarea întrebare
function submitAnswer() {
  const options = document.getElementsByName("option");
  let selected = -1;
  options.forEach(opt => { if(opt.checked) selected = parseInt(opt.value); });
  if(selected === -1){ alert("Alege o opțiune!"); return; }
  if(selected === quizData[currentQuestion].answer) score++;
  currentQuestion++;
  loadQuestion();
}

// Încarcă prima întrebare la start
loadQuestion();
